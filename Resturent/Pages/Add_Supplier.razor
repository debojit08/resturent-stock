@page "/addSupplier"
@using Resturent.Models
@inject SupplierService objSupplerService
@inject NavigationManager NavigationManager
<h3>Add Supplier</h3>
<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <MudTextField @bind-Value="objSupplier.SupplierName" Label="Supplier Name" Variant="Variant.Outlined" Margin="Margin.Dense" class="form-control"></MudTextField>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <MudTextField @bind-Value="objSupplier.Address" Label="Address" Variant="Variant.Outlined" Margin="Margin.Dense" class="form-control"></MudTextField>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <MudTextField @bind-Value="objSupplier.MobileNo" Label="Mobile No" Variant="Variant.Outlined" Margin="Margin.Dense" class="form-control"></MudTextField>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <MudTextField @bind-Value="objSupplier.Email" Label="Email" Variant="Variant.Outlined" Margin="Margin.Dense" class="form-control"></MudTextField>
        </div>
    </div>
    <div class="form-row">

        <div class="form-group col-md-2">
            <label for="inputPassword4">Is Active</label>
            <label class="switch">
                <input type="checkbox" @bind="isActive">
                <span class="slider round"></span>
            </label>
        </div>
      
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateSupplier" value="save" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />

            </div>
        </div>
    </div>
</form>


@code {

    Supplier objSupplier = new Supplier();

    private bool hover = true;
    private DateTime eDate;
    private string SupplierName;
    private string Address;
    private long MobileNo;
    private string Email;
    public bool isActive, isAdmin, status;


    protected override void OnInitialized()
    {
        eDate = DateTime.Now;
    }

    void CreateSupplier()
    {
        objSupplier.EDate = eDate;
        objSupplier.MDate = null;
        objSupplier.IsActive = isActive ? true : false;
        // objVariation.IsAdmin = isAdmin ? true : false;
        //objSupplier.Status = status ? true : false;
        objSupplerService.Create(objSupplier);
        NavigationManager.NavigateTo("supplier");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("suppler");
    }


}
